<div class="container">
  <h3>Grade number: <%= @grade.id %></h3>
  <p>Subject: <%= @grade.subject.name %></p>
  <p>Teacher: <%= @grade.subject.teacher.name %></p>
  <p>Student: <%= @grade.student.name %></p>
  <p>Grade: <%= @grade.value %></p>
  <p>Description: <%= @grade.description %></p>
  <%= link_to 'Back', :back, class: 'btn btn-danger btn-sm', role: 'button' %>
  <%= link_to 'Edit', edit_grade_path(@grade), class: 'btn btn-warning btn-sm', role: 'button' %>
</div>
